<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    tools:context=".music.MainMusicActivity">
        <ImageView
            android:id="@+id/ivClip"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher_round"
            android:adjustViewBounds="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="40dp"
            />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/titleHead"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/ivClip"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/space_default"
            android:textSize="@dimen/tv22sp"
            android:gravity="center_horizontal"
            />
        <ProgressBar
            android:id="@+id/pbAction"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_marginTop="@dimen/space_default"
            android:background="@color/black_overlay"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"
            android:progress="60"
            />
        <ImageView
            android:id="@+id/play"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/play_clip"
            app:layout_constraintTop_toBottomOf="@+id/pbAction"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/space_default"
            />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/skipnext_clip"
            app:layout_constraintStart_toEndOf="@+id/play"
            app:layout_constraintTop_toBottomOf="@id/pbAction" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="32dp"
            android:src="@drawable/ic_baseline_skip_previous_24"
            app:layout_constraintEnd_toStartOf="@+id/play"
            app:layout_constraintTop_toBottomOf="@id/pbAction" />

    <View
        android:id="@+id/content1"
        style="@style/cardMusic"
        android:layout_marginTop="@dimen/space_default"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/play"
        />
    <TextView
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Opening ASIAN GAMES 2018 - Indonesian Artist"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toTopOf="@id/content1"
        app:layout_constraintBottom_toBottomOf="@id/content1"
        />

    <View
        android:id="@+id/content2"
        style="@style/cardMusic"
        android:layout_marginTop="@dimen/space_default"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/content1"

        />
    <TextView
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Opening ASIAN GAMES 2018 - Indonesian Artist"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toTopOf="@id/content2"
        app:layout_constraintBottom_toBottomOf="@id/content2"
        />

    <View
        android:id="@+id/content3"
        style="@style/cardMusic"
        android:layout_marginTop="@dimen/space_default"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/content2"

        />
    <TextView
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Opening ASIAN GAMES 2018 - Indonesian Artist"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toTopOf="@id/content3"
        app:layout_constraintBottom_toBottomOf="@id/content3"
        />

    <View
        android:id="@+id/content4"
        style="@style/cardMusic"
        android:layout_marginTop="@dimen/space_default"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/content3"

        />
    <TextView
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Opening ASIAN GAMES 2018 - Indonesian Artist"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toTopOf="@id/content4"
        app:layout_constraintBottom_toBottomOf="@id/content4"
        />

    <View
        android:id="@+id/content5"
        style="@style/cardMusic"
        android:layout_marginTop="@dimen/space_default"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/content4"

        />
    <TextView
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Opening ASIAN GAMES 2018 - Indonesian Artist"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toTopOf="@id/content5"
        app:layout_constraintBottom_toBottomOf="@id/content5"
        />
</androidx.constraintlayout.widget.ConstraintLayout>