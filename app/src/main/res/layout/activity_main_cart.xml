<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".cart.MainCartActivity">

    <View
        android:id="@+id/content1"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/height_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <TextView
        android:id="@+id/line1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/original_egg"
        app:layout_constraintTop_toTopOf="@+id/content1"
        app:layout_constraintLeft_toRightOf="@id/img1"
        android:textSize="@dimen/tv22sp"
        android:textStyle="bold"
        />
    <ImageView
        android:id="@+id/img1"
        android:layout_width="@dimen/img60dp"
        android:layout_marginEnd="@dimen/space_default"
        android:src="@drawable/cart_clip"
        android:layout_height="@dimen/height_content"
        app:layout_constraintStart_toStartOf="@+id/content1"
        app:layout_constraintTop_toTopOf="@+id/content1"
        />
    <TextView
        android:id="@+id/tv10kg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1 Kg"
        app:layout_constraintTop_toBottomOf="@+id/line1"
        app:layout_constraintLeft_toRightOf="@id/img1"
        android:textSize="@dimen/tv12sp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/price1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Rp 26.000"
        android:textSize="@dimen/tv12sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/tv10kg"
        app:layout_constraintStart_toEndOf="@+id/img1"
        tools:layout_editor_absoluteX="80dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="30-12-2001 10:00"
        android:textSize="@dimen/tv12sp"
        android:textStyle="bold"
        android:layout_marginLeft="@dimen/space_default"
        app:layout_constraintStart_toEndOf="@+id/price1"
        app:layout_constraintBottom_toBottomOf="@+id/price1"
        />



    <View
        android:id="@+id/content3"
        android:layout_marginTop="@dimen/space_default"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/height_content"
        app:layout_constraintTop_toBottomOf="@+id/content2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <TextView
        android:id="@+id/line3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rice"
        app:layout_constraintTop_toTopOf="@+id/content3"
        app:layout_constraintLeft_toRightOf="@id/img3"
        android:textSize="@dimen/tv22sp"
        android:textStyle="bold"
        />
    <ImageView
        android:id="@+id/img3"
        android:layout_width="@dimen/img60dp"
        android:layout_marginEnd="@dimen/space_default"
        android:src="@drawable/cart_clip"
        android:layout_height="@dimen/height_content"
        app:layout_constraintStart_toStartOf="@+id/content3"
        app:layout_constraintTop_toTopOf="@+id/content3"
        />
    <TextView
        android:id="@+id/tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="25 Kg"
        app:layout_constraintTop_toBottomOf="@+id/line3"
        app:layout_constraintLeft_toRightOf="@id/img3"
        android:textSize="@dimen/tv12sp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/price3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Rp 250.000"
        android:textSize="@dimen/tv12sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/tv3"
        app:layout_constraintStart_toEndOf="@+id/img3"
        tools:layout_editor_absoluteX="80dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="30-12-2001 10:00"
        android:textSize="@dimen/tv12sp"
        android:textStyle="bold"
        android:layout_marginLeft="@dimen/space_default"
        app:layout_constraintStart_toEndOf="@+id/price3"
        app:layout_constraintBottom_toBottomOf="@+id/price3"
        />



    <View
        android:id="@+id/content2"
        android:layout_marginTop="@dimen/space_default"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/height_content"
        app:layout_constraintTop_toBottomOf="@+id/content1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <TextView
        android:id="@+id/line2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sugar"
        app:layout_constraintTop_toTopOf="@+id/content2"
        app:layout_constraintLeft_toRightOf="@id/img1"
        android:textSize="@dimen/tv22sp"
        android:textStyle="bold"
        />
    <ImageView
        android:id="@+id/img2"
        android:layout_width="@dimen/img60dp"
        android:layout_marginEnd="@dimen/space_default"
        android:src="@drawable/cart_clip"
        android:layout_height="@dimen/height_content"
        app:layout_constraintStart_toStartOf="@+id/content2"
        app:layout_constraintTop_toTopOf="@+id/content2"
        />
    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20 Kg"
        app:layout_constraintTop_toBottomOf="@+id/line2"
        app:layout_constraintLeft_toRightOf="@id/img2"
        android:textSize="@dimen/tv12sp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/price2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Rp 26.000"
        android:textSize="@dimen/tv12sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/tv2"
        app:layout_constraintStart_toEndOf="@+id/img2"
        tools:layout_editor_absoluteX="80dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="30-12-2001 10:00"
        android:textSize="@dimen/tv12sp"
        android:textStyle="bold"
        android:layout_marginLeft="@dimen/space_default"
        app:layout_constraintStart_toEndOf="@+id/price2"
        app:layout_constraintBottom_toBottomOf="@+id/price2"
        />

</androidx.constraintlayout.widget.ConstraintLayout>